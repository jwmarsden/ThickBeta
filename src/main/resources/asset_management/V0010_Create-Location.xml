<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

        <changeSet id="V001" author="jwm">
        <!--
        Location Status Table
        -->
        <createSequence incrementBy="10"
                        sequenceName="LOCATION_STATUS_ID_SEQ"
                        startValue="100"/>
        <createTable tableName="location_status">
            <column name="id" type="bigint">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_location_status"/>
            </column>
            <column name="system_status" type="VARCHAR(8)">
                <constraints nullable="false" />
            </column>
            <column name="status" type="VARCHAR(8)">
                <constraints nullable="false" />
            </column>
            <column name="description" type="VARCHAR(50)"/>
            <column name="active" type="bool" defaultValue="true">
                <constraints nullable="false" />
            </column>
        </createTable>
        <addUniqueConstraint columnNames="status"
                              constraintName="location_status"
                              deferrable="true"
                              disabled="false"
                              tableName="location_status"
                              validate="true"/>
        <loadData file="asset_management/data/V0010_Location_Status.csv" tableName="location_status"/>

        <!--
        Location Table
        -->
        <createSequence incrementBy="10" sequenceName="LOCATION_ID_SEQ" startValue="100"/>
        <createTable tableName="LOCATION">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_location"/>
            </column>
            <column name="key" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(100)"/>
            <column name="status" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="discipline" type="BIGINT"/>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="discipline" baseTableName="LOCATION"
                                 constraintName="FK_LOCATION_ON_DISCIPLINE" referencedColumnNames="id"
                                 referencedTableName="DISCIPLINE"/>
        <addForeignKeyConstraint baseColumnNames="status" baseTableName="LOCATION"
                                 constraintName="FK_LOCATION_ON_STATUS" referencedColumnNames="id"
                                 referencedTableName="LOCATION_STATUS"/>
    </changeSet>

</databaseChangeLog>